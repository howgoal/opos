<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/initialpage"
    android:orientation="vertical" >

    <Button
        android:id="@+id/lastgame"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/newgame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="Last Game"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rank"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lastgame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="Rank"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/about"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="About"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/exit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/newgame"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/lastgame"
        android:layout_alignRight="@+id/lastgame"
        android:layout_centerVertical="true"
        android:background="@drawable/button_layout"
        android:text="New Game"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/treasure"
        android:layout_width="250dp"
        android:layout_height="224dp"
        android:layout_above="@+id/newgame"
        android:layout_centerHorizontal="true"
        android:background="@drawable/opos" />

</RelativeLayout>
